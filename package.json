{
  "name": "media-scraper",
  "version": "1.0.0",
  "description": "Media scraping application",
  "scripts": {
    "dev": "docker-compose -f docker-compose.base.yml -f docker-compose.dev.yml up --build",
    "prod": "docker-compose -f docker-compose.base.yml -f docker-compose.prod.yml up --build",
    "dev:down": "docker-compose -f docker-compose.base.yml -f docker-compose.dev.yml down",
    "prod:down": "docker-compose -f docker-compose.base.yml -f docker-compose.prod.yml down",
    "clean": "docker-compose -f docker-compose.base.yml -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.base.yml -f docker-compose.prod.yml down -v"
  }
}